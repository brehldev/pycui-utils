{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":enableVulnerabilityAlerts",
    ":maintainLockFilesWeekly",
    ":automergeDigest",
    ":automergeTesters",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "automerge": true,
      "description": "Automatically merges updates to the GitLab CI/CD configuration file.",
      "groupName": "CI/CD",
      "matchFileNames": [
        ".github/workflows/rust.yml"
      ]
    }
  ],
  "schedule": [
   "before 8am on Sunday"
  ],
  "timezone": "America/New_York",
  "prConcurrentLimit": 8
}
